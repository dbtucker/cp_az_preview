{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json# ",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "scriptsUri": {
            "type": "string"
        },
        "clusterName": {
            "type": "string"
        },
        "numBrokers": {
            "type": "int"
        },
        "numZookeepers": {
            "type": "int"
        },
        "numWorkers": {
            "type": "int"
        },
        "confluentVersion": {
            "type": "string"
        },
        "vmSize" : {
            "type": "string",
            "defaultValue": "Standard_D2"
        },
        "imagePublisher": {
            "type": "string"
        },
        "imageOffer": {
            "type": "string"
        },
        "imageSKU": {
            "type": "string"
        },
        "imageVersion": {
            "type": "string",
            "defaultValue": "latest"
        },
        "imagePlan": {
            "type": "string",
            "defaultValue": "no"
        },
        "adminUsername": {
            "type": "securestring"
        },
        "adminPassword": {
            "type": "securestring"
        },
        "kadminPassword": {
            "type": "securestring"
        },
        "sshKey": {
            "type": "securestring"
        },        
        "authenticationType": {
            "type": "string",
            "defaultValue": "password",
            "allowedValues": [
                "password",
                "sshPublicKey"
            ]
        },
        "storageAccountBasename": {
            "type": "string"
        },
        "vnetName": {
            "type": "string"
        },
        "vnetSubnetName": {
            "type": "string"
        },
        "vnetResourceGroupName": {
            "type": "string"
        },
        "location": {
            "type": "string"
        }                
    },
    "variables": {
        "zookeeperBasename": "[concat(parameters('clusterName'),'-zk-')]",
        "subnetRef" : "[concat(resourceId(parameters('vnetResourceGroupName'), 'Microsoft.Network/virtualNetworks', parameters('vnetName')), '/subnets/', parameters('vnetSubnetName'))]",
        "publicIPAddressType" : "Dynamic"
    },
    "resources": [
    {
        "name": "ZookeeperNics",
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2015-01-01",
        "properties": {
            "mode": "Incremental",
            "templateLink": {
                "uri": "[concat(parameters('scriptsUri'), 'nics.json')]",
                "contentVersion": "1.0.0.0"
            },
            "parameters": {
                "vnetName" : {
                    "value": "[parameters('vnetName')]"
                },
                "groupSize" : {
                    "value": "[parameters('numZookeepers')]"
                },
                "groupBasename" : {
                    "value": "[variables('zookeeperBasename')]"
                },
                "publicIPAddressBasename" : {
       	            "value": "[concat(parameters('clusterName'),'-',substring(uniquestring(resourceGroup().id),0,4),'-zk-')]"
                },
                "publicIPAddressType": {
                    "value": "[variables('publicIPAddressType')]"
                },
                "subnetRef" : {
                    "value" : "[variables('subnetRef')]"
                },
                "location" : {
                    "value": "[parameters('location')]"
                }
            }
        }
    },
    {
        "name": "ZookeeperVms",
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2015-01-01",
        "dependsOn": [
            "['Microsoft.Resources/deployments/ZookeeperNics']"
        ],        
        "properties": {
            "mode": "Incremental",
            "templateLink": {
                "uri": "[concat(parameters('scriptsUri'), 'vms.json')]",
                "contentVersion": "1.0.0.0"
            },
            "parameters": {
                "scriptsUri" : {
                    "value": "[parameters('scriptsUri')]"
                },
                "clusterName" : {
                    "value": "[parameters('clusterName')]"
                },
                "groupSize" : {
                    "value": "[parameters('numZookeepers')]"
                },
                "groupBasename" : {
                    "value": "[variables('zookeeperBasename')]"
                },
                "groupClass" : {
                    "value": "zk"
                },
                "vmSize" : {
                    "value": "[parameters('vmSize')]"
                },
                "imagePublisher" : {
                    "value": "[parameters('imagePublisher')]"
                },
                "imageOffer" : {
                    "value": "[parameters('imageOffer')]"
                },
                "imageSKU" : {
                    "value": "[parameters('imageSKU')]"
                },
                "imageVersion" : {
                    "value": "[parameters('imageVersion')]"
                },
                "imagePlan" : {
                    "value": "[parameters('imagePlan')]"
                },
                "adminUsername" : {
                    "value": "[parameters('adminUsername')]"
                },
                "adminPassword" : {
                    "value": "[parameters('adminPassword')]"
                },
                "sshKey" : {
                    "value" : "[parameters('sshKey')]"
                },
                "authenticationType" : {
                    "value" : "[parameters('authenticationType')]"
                },
                "storageAccountSeed" : {
                    "value": "[parameters('storageAccountBasename')]"
                },
                "numberOfDataDisks" : {
                    "value" : 1
                },
                "location" : {
                    "value": "[parameters('location')]"
                }
            }
        }
    },
    {
        "name": "ZookeeperExtensions",
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2015-01-01",
        "dependsOn": [
            "['Microsoft.Resources/deployments/ZookeeperVms']"
        ],        
        "properties": {
            "mode": "Incremental",
            "templateLink": {
                "uri": "[concat(parameters('scriptsUri'), 'extensions.json')]",
                "contentVersion": "1.0.0.0"
            },
            "parameters": {
                "scriptsUri" : {
                    "value": "[parameters('scriptsUri')]"
                },
                "clusterName" : {
                    "value": "[parameters('clusterName')]"
                },
                "groupSize" : {
                    "value": "[parameters('numZookeepers')]"
                },
                "groupBasename" : {
                    "value": "[variables('zookeeperBasename')]"
                },
                "numBrokers" : {
                    "value": "[parameters('numBrokers')]"
                },
                "numZookeepers" : {
                    "value": "[parameters('numZookeepers')]"
                },
                "numWorkers" : {
                    "value": "[parameters('numWorkers')]"
                },
                "confluentVersion" : {
                    "value": "[parameters('confluentVersion')]"
                },
                "kadminPassword" : {
                    "value": "[parameters('kadminPassword')]"
                },
                "location" : {
                    "value": "[parameters('location')]"
                }
            }
        }
    }
    ]
}
